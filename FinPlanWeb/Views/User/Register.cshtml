@model FinPlanWeb.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login failed. Please check your login details.");

    <div>
        <fieldset>
            <legend>Create</legend>
            <div class="editor-label">
                @Html.LabelFor( u => u.Username);
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Username)
                @Html.ValidationMessageFor(u => u.Username)
            </div>
            <div class="editor-label">
                @Html.LabelFor(u => u.EmailAddress);
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.EmailAddress)
                @Html.ValidationMessageFor(u => u.EmailAddress)
            </div>
            <div class="editor-label">
                @Html.LabelFor(u => u.Password); 
            </div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password)
            </div>
            <div class="editor-label">
                @Html.LabelFor(u => u.ConfirmPassword);
            </div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.ConfirmPassword)
                @Html.ValidationMessageFor(u => u.ConfirmPassword)
            </div>
            <input type="submit" value="Create" />
        </fieldset>
    </div>
}